<h3 class="display-4">Check in</h3>
<p>Check in our Barber Shop</p>

<form action="/visit" method="POST">

	<div class="form-group">
		<label>Name</label>
		<input name="username" type="text" class="form-control" placeholder="Your name" value="<%=@username%>">
	</div>

	<div class="form-group">
		<label>Phone</label>
		<input name="phone" type="text" class="form-control" placeholder="Your phone" value="<%=@phone%>">
	</div>

	<div class="form-group">
		<label>Date and time</label>
		<input id="datetimepicker" name="date_time" type="text" class="form-control" placeholder="Check date and time" value="<%=@date_time%>">
	</div>

	<div class="form-group">
		<label for="disabledSelect">Check barber</label>
		<select name="select_barber" id="disabledSelect" class="form-control">

			<% @barbers.each do |item| %>
				<option <%= @select_barber == item['name'] ? 'selected' : '' %>><%= item['name'] %></option>
			<% end %>

		</select>
	</div>

	<div class="form-group">
		<label>Check color</label>
		<br>
		<select id="color" name="color">
			<option value="#7bd148">Green</option>
			<option value="#5484ed">Bold blue</option>
			<option value="#a4bdfc">Blue</option>
			<option value="#46d6db">Turquoise</option>
			<option value="#7ae7bf">Light green</option>
			<option value="#51b749">Bold green</option>
			<option value="#fbd75b">Yellow</option>
			<option value="#ffb878">Orange</option>
			<option value="#ff887c">Red</option>
			<option value="#dc2127">Bold red</option>
			<option value="#dbadff">Purple</option>
			<option value="#e1e1e1">Gray</option>
		</select>
	</div>


<button type="submit" class="btn btn-primary">Записаться</button>
</form>
<script type="text/javascript">

$(function () {

$('#color').simplecolorpicker();
$('#datetimepicker').datetimepicker();

})

</script>